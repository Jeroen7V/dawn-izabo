<project-component class="project">
  {%- if section.settings.image_1 != blank -%}
  <div class="project__image"
    {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
    {{ section.settings.image_1 | image_url: width: section.settings.width | image_tag:
      class: 'project__image_obj',
      alt: logo_alt
    }}
  </div>
  {%- endif -%}

  {%- if section.settings.image_2 != blank -%}
  <div class="project__image"
    {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
    {{ section.settings.image_2 | image_url: width: section.settings.width | image_tag:
      class: 'project__image',
      alt: logo_alt
    }}
  </div>
  {%- endif -%}
  {%- if section.settings.image_3 != blank -%}
  <div class="project__image"
    {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
    {{ section.settings.image_3 | image_url: width: section.settings.width | image_tag:
      class: 'project__image',
      alt: logo_alt
    }}
  </div>
  {%- endif -%}
  {%- if section.settings.image_4 != blank -%}
    <div class="project__image"
    {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
    {{ section.settings.image_4 | image_url: width: section.settings.width | image_tag:
      class: 'project__image',
      alt: logo_alt
    }}
  </div>
  {%- endif -%}
  {%- if section.settings.image_5 != blank -%}
    <div class="project__image"
    {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
    {{ section.settings.image_5 | image_url: width: section.settings.width | image_tag:
      class: 'project__image',
      alt: logo_alt
    }}
  </div>
  {%- endif -%}

</project-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.project.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "project_name",
      "label": "t:sections.project.description",
      "default": "Project"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image width",
      "default": 100
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "t:sections.project.image.label"
    }
  ],
  "presets": [
    {
      "name": "Project"
    }
  ]
}
{% endschema %}
