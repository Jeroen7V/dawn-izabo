{{ 'section-project.css' | asset_url | stylesheet_tag }}

<div class="project project">
  {%- if section.settings.image_1 != blank -%}
  <div class="project__image">
    <div class="project__image_center">
      {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
      {{ section.settings.image_1 | image_url: width: section.settings.width | image_tag:
        class: 'project__image_obj',
        alt: logo_alt
      }}
    </div>
  </div>
  {%- endif -%}

  {%- if section.settings.image_2 != blank -%}
  <div class="project__image">
    <div class="project__image_center">
      {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
      {{ section.settings.image_2 | image_url: width: section.settings.width | image_tag:
        class: 'project__image_obj',
        alt: logo_alt
      }}
    </div>
  </div>
  {%- endif -%}
  {%- if section.settings.image_3 != blank -%}
  <div class="project__image">
    <div class="project__image_center">
      {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
      {{ section.settings.image_3 | image_url: width: section.settings.width | image_tag:
        class: 'project__image_obj',
        alt: logo_alt
      }}
    </div>
  </div>
  {%- endif -%}
  {%- if section.settings.image_4 != blank -%}
    <div class="project__image">
      <div class="project__image_center">
        {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
        {{ section.settings.image_4 | image_url: width: section.settings.width | image_tag:
          class: 'project__image_obj',
          alt: logo_alt
        }}
      </div>
  </div>
  {%- endif -%}
  {%- if section.settings.image_5 != blank -%}
    <div class="project__image">
      <div class="project__image_center">
        {%- assign logo_alt = section.settings.logo.alt | default: section.settings.project_name | escape -%}
        {{ section.settings.image_5 | image_url: width: section.settings.width | image_tag:
          class: 'project__image_obj',
          alt: logo_alt
        }}
      </div>
    </div>
  {%- endif -%}

</div>
{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.project.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "project_name",
      "label": "t:sections.project.description",
      "default": "Project"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image width",
      "default": 100
    },  
    {
      "type": "header",
      "content": "t:sections.project.image.header"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "t:sections.project.image.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Project"
    }
  ]
}
{% endschema %}
